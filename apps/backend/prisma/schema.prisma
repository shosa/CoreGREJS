  piva      String?  @db.VarChar(20)
  cf        String?  @db.VarChar(20)
  attivo    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  documents ExportDocument[]

