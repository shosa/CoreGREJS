# Application
NODE_ENV=production
APP_NAME=CoreGREJS
APP_VERSION=1.0.0

# Database - Connessione a MySQL core-services
DB_HOST=core-mysql
DB_PORT=3306
DB_NAME=coregrejs
DB_USER=root
DB_PASS=rootpassword
DATABASE_URL="mysql://root:rootpassword@core-mysql:3306/coregrejs"

# Redis - Connessione a Redis condiviso in CoreServices
REDIS_HOST=core-redis
REDIS_PORT=6379
REDIS_PASSWORD=coresuite_redis

# JWT Configuration
JWT_SECRET=coregre_jwt_secret_change_in_production
JWT_EXPIRATION=24h

# URLs
FRONTEND_URL=http://localhost:3010
NEXT_PUBLIC_API_URL=http://localhost:3011

# Mobile PWA Configuration
# IP del server dove Ã¨ esposto il backend (usato dal browser client mobile)
# Sostituire con l'IP effettivo del server in produzione
# ATTENZIONE: Solo IP senza porta! La porta viene aggiunta automaticamente
MOBILE_LISTEN_IP=192.168.3.40

# MinIO Storage - Connessione a MinIO condiviso in CoreServices
MINIO_ENDPOINT=core-minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=coregre-storage