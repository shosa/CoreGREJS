{
  "name": "coregre-js",
  "version": "1.0.0",
  "description": "CoreGRE - ERP System for Manufacturing (Node.js/TypeScript)",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:mobile\"",
    "dev:backend": "npm run dev -w @coregre/backend",
    "dev:frontend": "npm run dev -w @coregre/frontend",
    "dev:mobile": "npm run dev -w @coregre/mobile",
    "build": "npm run build -w @coregre/backend && npm run build -w @coregre/frontend && npm run build -w @coregre/mobile",
    "build:backend": "npm run build -w @coregre/backend",
    "build:frontend": "npm run build -w @coregre/frontend",
    "build:mobile": "npm run build -w @coregre/mobile",
    "start": "concurrently \"npm run start:prod -w @coregre/backend\" \"npm run start -w @coregre/frontend\" \"npm run start -w @coregre/mobile\"",
    "start:backend": "npm run start:prod -w @coregre/backend",
    "start:frontend": "npm run start -w @coregre/frontend",
    "start:mobile": "npm run start -w @coregre/mobile",
    "db:generate": "npm run db:generate -w @coregre/backend",
    "db:migrate": "npm run db:migrate -w @coregre/backend",
    "db:seed": "npm run db:seed -w @coregre/backend",
    "lint": "npm run lint -w @coregre/backend && npm run lint -w @coregre/frontend && npm run lint -w @coregre/mobile",
    "test": "npm run test -w @coregre/backend"
  },
  "devDependencies": {
    "@types/react-grid-layout": "^1.3.6",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@nestjs/typeorm": "^11.0.0",
    "@types/pdfkit": "^0.17.3",
    "chart.js": "^4.5.1",
    "exceljs": "^4.4.0",
    "pdfkit": "^0.17.2",
    "react-chartjs-2": "^5.3.1",
    "react-grid-layout": "^1.5.3",
    "sonner": "^2.0.7",
    "typeorm": "^0.3.27"
  }
}
